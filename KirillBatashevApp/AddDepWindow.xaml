<Window x:Class="KirillBatashevApp.AddDepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KirillBatashevApp"
        mc:Ignorable="d"
        Title="AddDepWindow" Height="197" Width="318" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="lblDepName" 
               Content="Добавьте новый отдел:" 
               HorizontalAlignment="Left" 
               Margin="50,25,0,0" 
               VerticalAlignment="Top"/>

        <TextBox x:Name="tboxNewDep"
            HorizontalAlignment="Left" 
            Height="auto" 
            Margin="50,60,0,0" 
            TextWrapping="Wrap" 
            Text="{Binding dName}"
            VerticalAlignment="Top" 
            Width="200"
            Padding="3"/>
        <Button x:Name="btnSaveDep" 
            Content="Сохранить" 
            HorizontalAlignment="Center" 
            Margin="30,110,30,0"
            VerticalAlignment="Top" 
            Width="auto"
            Padding="3" Click="BtnSaveDep_Click"/>
    </Grid>
</Window>
